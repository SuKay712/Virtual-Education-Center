    "dotenv": "^16.5.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.14.0",
    "nestjs-i18n": "^10.5.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.22"
